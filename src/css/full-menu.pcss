.full-menu {
    list-style: none;
    &:first-of-type {
        border-right: 1px solid #404a56;
        width: 30%;
        margin-right: 20px;
    }

    &__item {
        margin-bottom: 20px;
        display: flex;
    }

    &__link {
        color: #fff;
        text-decoration: none;
        font-size: 18px;
        min-width: 130px;

        &:hover {
            color: var(--red-default-link);
        }

        &_bold {
            font-weight: bold;
        }
    }
}
