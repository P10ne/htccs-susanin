.aside {
    &__blogs {
        background-color: var(--light-gray-bg);
    }
    &__pic {
        display: block;
        width: 100%;
        height: 100%;
    }

    & > * {
        margin-top: 20px;

        &:first-child {
            margin-top: 0;
            height: 400px;
        }
    }

    &__vk, &__out-ads {
        border: 1px solid #cfd8dc;
    }

    @media (--media-aside-close-size) {
        & {
            display: none;
        }
    }
}
