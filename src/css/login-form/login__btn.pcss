.login__btn {
    background-color: var(--elements-gray);
    padding: 0 35px;
    height: 50px;
    color: #fff;
    font-size: 18px;
    font-weight: bold;
    border-radius: 25px;
    margin:20px 0;

    &:hover {
        background-color: var(--red-default-btn);
    }

    &:active {
        background-color: var(--red-default-link);
    }
}
