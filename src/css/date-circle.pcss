.date-circle {
    width: 110px;
    height: 110px;
    border: 2px solid #d7dde1;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    &-first-line {
        font-size: 25pt;
        display: block;
    }

    &-sec-line {
        font-size: 14pt;
        display: block;
    }

    &:hover {
        background-color: #edf0f2;
        border-color: #edf0f2;
    }
}
