.author-info {
    display: flex;
    align-items: center;

    &__avatar {
        width: 40px;
        height: 40px;
        margin-right: 7px;
        border: 2px solid var(--light-gray-bg);
        border-radius: 50%;
    }
    &__name {
        font-size: 13px;
        max-width: 90px;
    }

    &__link {
        color: #fff;
        text-decoration: none;
        &:hover {
            color: var(--red-default-link);
        }
    }
}
