.calendar
    .calendar-header
        include arrow-left
        span.calendar-header__date Сентябрь, 2016
        include arrow-right
    table.calendar-content
        tr.calendar__weak
            -let weak = ["Пн", "Вт", "Ср", "Чт", "Пт", "Сб", "Вс"]
                each val in weak
                    td.calendar__ceil= val
        -let day = 0;
        -for(let i=0; i<6; i++)
            tr.calendar__row
                -for(let j=0; j<7; j++)
                    -day++;
                    -if(day <= 31)
                        td.calendar__ceil= day
                    -else
                        td
