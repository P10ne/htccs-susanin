mixin cardBlogGray(data)
    - const topImgCl = ['card', 'card_top', 'blog-card-gray'];
    div(class= topImgCl)
        a.card__content(href='#')
            .card__container
                .card__info
                    p.card__title= data.title
        .card__bottom-info
            -if(data.author)
                include ../common/author-info
                +authorInfo(data.author.name, data.author.img)
            -if(data.date)
                span.card__date= data.date
            if(data.views)
                include ../common/views-info
                +viewsInfo(data.views)
            if(data.comments)
                include ../common/comments-info
                +commentsInfo(data.comments)

