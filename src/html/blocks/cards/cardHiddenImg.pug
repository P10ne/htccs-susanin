mixin cardImgHidden(data, important)
    - const topImgCl = ['card', 'card_top'];
    -if(important) topImgCl.push('card_top_important');
    div(class= topImgCl)
        a.card__content(href='#')
            div(class='card__img-container card__img-container_hidden d-n@xl')
                img.card__img(src=require(`../../images/${data.img}`))
            .card__container
                .card__info
                    p.card__title= data.title
                    .card__bottom-info
                        span.card__date= data.date
                        if(data.views)
                            include ../common/views-info
                            +viewsInfo(data.views)
                        if(data.comments)
                            include ../common/comments-info
                            +commentsInfo(data.comments)
            case data.mark
                when marks.play
                    include ../marks/mark-play
                when marks.photo
                    include ../marks/mark-photo
                when marks.podcast
                    include ../marks/mark-podcast
                when marks.longrid
                    include ../marks/mark-longrid
                    +markLongrid(data.markTitle)

